{
  "name": "@debate3/hardhat",
  "license": "MIT",
  "version": "0.0.1",
  "scripts": {
    "clean": "pnpm hardhat clean",
    "compile": "pnpm hardhat compile --no-typechain",
    "build": "pnpm clean && pnpm compile && pnpm types",
    "chain": "pnpm hardhat node",
    "types": "pnpm typechain --target=ethers-v5 '../frontend/src/artifacts/contracts/**/+([a-zA-Z0-9_]).json' --out-dir '../frontend/src/types/typechain/'",
    "deploy": "pnpm hardhat run scripts/deploy.ts --network localhost",
    "deploy:mumbai": "pnpm hardhat run scripts/deploy.ts --network mumbai",
    "deploy:rinkeby": "pnpm hardhat run scripts/deploy.ts --network rinkeby",
    "lint": "pnpm eslint && pnpm solhint",
    "eslint": "eslint --ext .js,.jsx,.ts,.tsx --fix .",
    "solhint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.6.4",
    "@ethersproject/providers": "^5.6.8",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.3",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "^2.1.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-vyper": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.7.1",
    "@openzeppelin/hardhat-upgrades": "^1.16.1",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.32",
    "chai": "^4.3.6",
    "child-process-promise": "^2.2.1",
    "dotenv": "^16.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.6.9",
    "hardhat": "^2.10.1",
    "hardhat-contract-sizer": "^2.5.0",
    "hardhat-deploy": "^0.11.0",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.6.0",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  }
}
